<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/AIP_A2</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">1234</property>
    <property name="hibernate.hbm2ddl.auto">create</property>
    <property name="show_sql">true</property>
    <mapping class="Kunde.Kunde"/>
    <mapping class="Lager.Produkt"/>
    <mapping class="Lieferant.Lieferant"/>
    <mapping class="Transport.Lieferung"/>
    <mapping class="Rechnung.Rechnung"/>
    <mapping class="Rechnung.Zahlungseingang"/>
    <mapping class="Lager.WarenAusgangMeldung"/>
    <mapping class="Lager.WarenEingangMeldung"/>
    <mapping class="Verkauf.Angebot"/>
    <mapping class="Verkauf.Auftrag"/>
  </session-factory>
</hibernate-configuration>
